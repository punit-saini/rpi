

      <%- include('partials/header.ejs'); %>
    

        <div class="contact-and-map-box">

            <div class="contact-form">
                <h2>Contact Us</h2>
                <p class="short-line"></p>
                <form action="/" method="POST">
                    <label for="username">Name <span class="highlight-red">*</span></label>
                    <input type="text" name="username" placeholder="Your name...">
                    <div class="one-liner">
                        <div>
                           <label for="mail">Email <span class="highlight-red">*</span></label>
                           <input type="email" name="mail" placeholder="Your email...">
                        </div>
                        <div>
                            <label for="number">Phone</label>
                            <input type="tel" name="number" placeholder="Your Phone..">
                        </div>
                    </div>
                    <label for="subject">Subject</label>
                    <input type="text" name="subject" placeholder="Your Subject...">
                    <label for="textbox">Comment or Message <span class="highlight-red">*</span></label>
                    <textarea name="textbox" id="textbox" cols="30" rows="10"></textarea>
                    
                    <button type="submit">Submit</button>
                    
                </form>
            </div>

            <div class="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3596269.0828212146!2d74.73970745803246!3d28.329160762057906!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390ce19466e19ae1%3A0x45ceeb565fd5de6c!2sNational%20Capital%20Region!5e0!3m2!1sen!2sin!4v1607521218356!5m2!1sen!2sin" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>

        </div>
    

